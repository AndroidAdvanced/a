<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/percentRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="70dp"
            android:id="@+id/back"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:layout_heightPercent="10%"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/back"
        app:layout_heightPercent="4%"
        android:layout_marginLeft="10dp"
        app:layout_widthPercent="8%"/>
    </android.support.percent.PercentRelativeLayout>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btnLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/logo_mgu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.7"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_version"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Version Name : 0.0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        android:textColor="@color/blue"
        android:textSize="18dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_questions_attempted"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Questions Attempted  :  2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33"
        android:textColor="@color/blue"
        android:textSize="18dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8"/>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnFeedBack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/feedback"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79"
        android:background="@color/yellow"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8"/>

    <Button
        android:id="@+id/btnLuckyDraw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/lucky_draw"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFeedBack"
        app:layout_constraintVertical_bias="0.290000009"
        app:layout_constraintWidth_default="percent"
        android:background="@color/yellow"
        app:layout_constraintWidth_percent="0.8"/>

</android.support.constraint.ConstraintLayout>
